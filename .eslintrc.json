{
    "env": {
        "node": true,
        "browser": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 8
    },
    "extends": [
        "eslint:recommended"
    ],
    "globals": {
        "nautsRankings": "readonly"
    },
    "rules": {
        "eqeqeq": "error",
        "semi": "error",
        "curly": "error",
        "brace-style": "error",
        "space-infix-ops": "error",
        "no-multi-spaces": "error",
        "no-var": "error",
        "no-unused-vars": "warn",
        "keyword-spacing": "error",
        "comma-spacing": "error",
        "no-implicit-coercion": "error",
        "prefer-const": "warn",
        "quotes": [
            "error",
            "double",
            {
                "avoidEscape": false
            }
        ],
        "spaced-comment": [
            "error",
            "always",
            {
                "block": {
                    "balanced": true
                }
            }
        ],
        "indent": [
            2,
            4,
            {
                "SwitchCase": 1,
                "VariableDeclarator": 1
            }
        ]
    }
}